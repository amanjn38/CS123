<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/bg"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="12dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp"
    android:background="#ffffff"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/vnv"
            android:layout_width="12dp"
            android:layout_height="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/profile"
            android:layout_marginTop="16dp"
            android:layout_marginStart="12dp">

        </ImageView>

        <TextView
            android:textSize="16dp"
            android:id="@+id/dishName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/vnv"
            android:layout_marginTop="12dp"
            android:text="Sagar Ratan"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="8dp"/>

        <TextView
            android:id="@+id/a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Quantity : "
            android:layout_marginEnd="36dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="1"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toTopOf="parent"/>


        <TextView
            app:layout_constraintStart_toEndOf="@id/a"
            android:id="@+id/w"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Rs. "
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/dishName"
            app:layout_constraintTop_toBottomOf="@id/dishName" />
        <TextView
            app:layout_constraintStart_toEndOf="@id/w"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text=" 350"
            android:layout_marginStart="24dp"
            android:textSize="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/dishName"
            app:layout_constraintTop_toBottomOf="@id/dishName" />
        <TextView
            android:id="@+id/e"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@id/a"
            app:layout_constraintEnd_toEndOf="@id/quantity"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/dishName"
            android:text="Rs."
            />
        <TextView
            android:id="@+id/totalPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/e"
            app:layout_constraintEnd_toEndOf="@id/quantity"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/dishName"
            android:text="350"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>